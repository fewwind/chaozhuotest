<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fewwind.chaozhuofirst.ui.RvActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_page_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:elevation="6dp"

        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_rect"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/id_tab_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_radio_button"
            android:layout_weight="2"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_rb_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="正常标签（6）"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/radio_txt"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorTxt"/>

            <RadioButton
                android:id="@+id/id_rb_incognito"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="隐私标签"
                android:drawableLeft="@drawable/ic_album_black_24dp"
                android:button="@null"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/radio_txt"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/id_tab_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_radio_button"
            android:layout_weight="1"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_rb_style_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:textSize="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/radio_tab_style_card"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorTxt"/>

            <RadioButton
                android:layout_marginTop="4dp"
                android:id="@+id/id_rb_style_list"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableTop="@drawable/radio_tab_style_list"
                android:textColor="@color/radio_txt"/>

        </RadioGroup>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/id_fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
